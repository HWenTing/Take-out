            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/information_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"


                    android:layout_toRightOf="@+id/img_information_mobile"
                    android:background="@null"
                    android:hint="mobile"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:layout_alignTop="@+id/img_information_mobile" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"

                    android:layout_toRightOf="@+id/img_information_mobile"
                    android:background="@color/colorPrimary"/>

                <ImageView
                    android:id="@+id/img_information_mobile"

                    android:scaleType="fitXY"
                    android:background="@android:drawable/btn_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
            <Button
                android:id="@+id/information_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="100dp"
                android:paddingBottom="@dimen/activity_horizontal_margin"
